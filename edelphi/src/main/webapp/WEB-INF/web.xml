<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>eDelphi</display-name>
  <description>eDelphi</description>
  <filter>
    <filter-name>LocaleFilter</filter-name>
    <filter-class>fi.metatavu.edelphi.LocaleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LocaleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>fi.metatavu.edelphi.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>PrettyUrlFilter</filter-name>
    <filter-class>fi.metatavu.edelphi.PrettyUrlFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrettyUrlFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>fi.metatavu.edelphi.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>errorJspPage</param-name>
      <param-value>/jsp/pages/error.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>loginUrlRelative</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>loginUrl</param-name>
      <param-value>login.page</param-value>
    </init-param>
    <init-param>
      <param-name>requestDispatcher</param-name>
      <param-value>fi.metatavu.edelphi.PrettyUrlRequestDispatcher</param-value>
    </init-param>
    <init-param>
      <param-name>applicationPath</param-name>
      <param-value>/_app</param-value>
    </init-param>
    <init-param>
      <param-name>platformErrorListener</param-name>
      <param-value>fi.metatavu.edelphi.PlatformErrorListener</param-value>
    </init-param>
    <init-param>
      <param-name>sessionSynchronization</param-name>
      <param-value>true</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/_app/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>